.header__contents
  .header__contents__main
    .header__contents__main__main-title
      = link_to image_tag("material/logo/logo.png", class:"icon"), "/" 
    .header__contents__main__search_box
      .header__contents__main__search_box__form
        %form{:action => "#", :method => "get"}
        %input.input-box{:name => "search", :placeholder => "キーワードから探す",:type => "search"}
        %input.search-btn{:type => "image", :src => "/assets/icon-search1.png", :alt =>"検索ボタン"}

  .header__contents__navbar
    %ul.list-left
      %li.list-left__category-btn 
        = link_to "カテゴリー", "/", class: "list-btn"
      %li.list-left__brand-btn
        = link_to "ブランド", "/", class: "list-btn"
      %ul.list-right
        %li.list-right__login-btn 
          = link_to "ログイン", "/", class: "list-btn"
        %li.list-right__registration-btn
          = link_to "新規会員登録", "/", class: "list-btn"