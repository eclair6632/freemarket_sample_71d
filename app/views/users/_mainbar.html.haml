.content__main
  %section.content__main__user-info
    = link_to "#" do
      %figure
        = image_tag 'material/icon/default-statue.jpeg', height: '60px', width: '60px'
      %h2
        = current_user.nickname
      .user-data
        %div
          評価数
          %span.evaluation
            1000000
        %div
          出品数
          %span.product-number
            3000000
  %section.content__main__notice-todo
    %ul.mypage-tabs
      %li
        %h3
          = link_to "お知らせ", "#"
      %li
        %h3
          = link_to "やることリスト", "#"
    .tab-content
      %ul.tab-content__list
        %li
          = link_to  "#", class: "item-link" do
            %figure
              = image_tag 'material/icon/icon_brand.png', height: '48px', width: '48px'
            .item-link__body
              .item-link__body__text お知らせ1
              %time
                =icon('far', 'clock', class: "icon-clock")
                %span<>10時間前
            = icon('fas', 'chevron-right', class: "arrow-right")
        %li
          = link_to  "#", class: "item-link" do
            %figure
              = image_tag 'material/icon/icon_brand.png', height: '48px', width: '48px'
            .item-link__body
              .item-link__body__text お知らせ2
              %time
                =icon('far', 'clock', class: "icon-clock")
                %span<>5時間前
            = icon('fas', 'chevron-right', class: "arrow-right")
        %li
          = link_to  "#", class: "item-link" do
            %figure
              = image_tag 'material/icon/icon_brand.png', height: '48px', width: '48px'
            .item-link__body
              .item-link__body__text お知らせ3
              %time
                =icon('far', 'clock', class: "icon-clock")
                %span<>10時間前
            = icon('fas', 'chevron-right', class: "arrow-right")
        %li
          = link_to "一覧を見る", "#", class: "list-link" 
  %section.content__main__history
    %h4.content__main__history__header 購入した商品
    %ul.mypage-tabs
      %li
        %h3
          = link_to "取引中", "#"
      %li
        %h3
          = link_to "過去の取引", "#"
    .tab-content
      %ul.tab-content__list
