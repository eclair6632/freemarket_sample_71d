.single-container
  .single-container__header
    .single-container__header__logo
      = link_to image_tag("material/logo/logo.png", class:"list-image2"), root_path()
        
  .single-container__main
    .single-container__main__title.text-align-center
      新規会員登録
    = link_to new_user_users_path, class: "single-container__main__btn" do
      メールアドレスで登録する
  .single-container__main
    %input{class: "single-container__main__text",placeholder: "メールアドレス"}
    %input{class: "single-container__main__text",placeholder: "パスワード"}
    %input{type:"submit", class: "single-container__main__btn", value: "ログイン"}